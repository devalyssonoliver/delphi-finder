unit SearchMore;

interface

uses
  System.SysUtils, 
  System.Classes, 
  Vcl.Controls, 
  Vcl.StdCtrls,
  Vcl.Buttons,
  Vcl.Forms;

type
  TSearchMore = class(TBitBtn)
  private
    { Private declarations }
    procedure Click; override;
    procedure CriarTelaDePesquisa;
  protected
    { Protected declarations }
  public
    { Public declarations }
    constructor Create(AOwner: TComponent); override;
    destructor  Destroy; override;
  published
    { Published declarations }
  end;

procedure Register;

implementation

procedure Register;
begin
  RegisterComponents('CursoComponenteDelphi', [TSearchMore]);
end;

{ TSearchMore }

procedure TSearchMore.Click;
begin
  inherited Click;

end;

constructor TSearchMore.Create(AOwner: TComponent);
begin
  inherited Create(AOwner);
  Caption := '...';
  Width   := 25;
  Height  := 25;


end;

destructor TSearchMore.Destroy;
begin

  inherited Destroy;
end;


procedure TSearchMore.CriarTelaDePesquisa;
var
  aForm : TForm;
begin
   aForm := TForm.Create(nil);
   try
     aForm.ShowModal;
   finally
     aForm.Release;
   end;
end;

end.
