unit SearchMore;

interface

uses
  System.SysUtils, 
  System.Classes, 
  Vcl.Controls, 
  Vcl.StdCtrls,
  Vcl.Buttons,
  Vcl.Forms,
  Vcl.Dialogs;

type
  TSearchMore = class(TBitBtn)
  private
    FFormCaption: String;
    FFormWidth: Integer;
    FFormHeight: Integer;
    { Private declarations }
    procedure Click; override;
    procedure CriarTelaDePesquisa;
  protected
    { Protected declarations }
  public
    { Public declarations }
    constructor Create(AOwner: TComponent); override;
    destructor  Destroy; override;
  published
    { Published declarations }
    property OnClick;
    property FormCaption : String  read  FFormCaption write FFormCaption;
    property FormWidth   : Integer read  FFormWidth   write FFormWidth;
    property FormHeight  : Integer read  FFormHeight  write FFormHeight;
  end;

procedure Register;

implementation

procedure Register;
begin
  RegisterComponents('CursoComponenteDelphi', [TSearchMore]);
end;

{ TSearchMore }

procedure TSearchMore.Click;
begin
  inherited Click;
  CriarTelaDePesquisa;

end;

constructor TSearchMore.Create(AOwner: TComponent);
begin
  inherited Create(AOwner);
  Caption     := '...';
  Width       := 25;
  Height      := 25;
  FFormWidth  := 640;
  FFormHeight := 400;


end;

destructor TSearchMore.Destroy;
begin

  inherited Destroy;
end;


procedure TSearchMore.CriarTelaDePesquisa;
var
  aForm : TForm;
begin
   aForm := TForm.Create(nil);
   try
     aForm.BorderStyle := bsDialog;
     aForm.Position    := poScreenCenter;
     aForm.Font.Name   := 'Tahoma';
     aForm.Font.Size   := 08;
     aForm.Caption     := FFormCaption;
     aForm.Height      := FFormHeight;
     aForm.Width       := FFormWidth;
     aForm.ShowModal;
   finally
     aForm.Release;
   end;
end;

end.
